<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C3D4E"
    >

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle"
        android:padding="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/oie_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/project_by"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:text="Project By"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:textColor="@color/whiteTextColor"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/project_by"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="1. Shaarika Shaikh "
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="2. Sameer Shaikh"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="3. Vaishnavi Patil"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="4. Tejas Kellurkar"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="5. Ketan Bhogshetti"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"></TextView>

    </LinearLayout>


</RelativeLayout>