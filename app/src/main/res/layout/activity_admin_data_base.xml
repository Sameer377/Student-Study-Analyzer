<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".student.FirstYearStudentElearn"
    android:padding="20dp"
    android:background="#1C3D4E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/comfortaa_light"
            android:fontFeatureSettings="comm"
            android:text="Manage Accounts"
            android:textColor="#ffff"
            android:textSize="35dp"
            android:textStyle="bold" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/admin_Faculty_cd"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_class_black_24dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faculty Details"
                            android:id="@+id/faculty"
                            android:fontFamily="@font/comfortaa_light"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_below="@+id/faculty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Engineering"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:fontFamily="@font/comfortaa_light"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/admin_fy_cd"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     android:padding="20dp"
                     android:weightSum="2">

                     <ImageView
                         android:layout_weight="0"
                         android:layout_width="77dp"
                         android:layout_height="match_parent"
                         android:src="@drawable/ic_class_black_24dp" />
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_weight="2">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="First year"
                             android:id="@+id/fy"
                             android:fontFamily="@font/comfortaa_light"
                             android:textSize="20dp"
                             android:textColor="#000"
                             android:textStyle="bold"
                             android:layout_margin="10dp"/>

                         <TextView
                             android:layout_below="@+id/fy"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Computer Engineering"
                             android:textSize="15dp"
                             android:textColor="#000"
                             android:fontFamily="@font/comfortaa_light"
                             android:layout_marginLeft="10dp"/>
                     </RelativeLayout>
                 </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/admin_sy_cd"
                android:layout_marginTop="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_class_black_24dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Second year"
                            android:id="@+id/fy1"
                            android:fontFamily="@font/comfortaa_light"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_below="@+id/fy1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Engineering"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:fontFamily="@font/comfortaa_light"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/admin_ty_cd"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="2">

                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_class_black_24dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Third year"
                            android:id="@+id/fy2"
                            android:fontFamily="@font/comfortaa_light"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:layout_below="@+id/fy2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Engineering"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:fontFamily="@font/comfortaa_light"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/admindatabaseBack_tv"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>